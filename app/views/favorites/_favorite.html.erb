
<%if user_signed_in? %>
   <% if Favorite.find_by(user_id: current_user.id, article_id: article.id) %>
      <%=link_to article_favorite_path(article, article.favorites), {method: "delete", remote: true, class: "likes-count"} do %>
        <i class="fas fa-heart haert-red"></i>
        <%= article.favorites.count %>
      <% end %>
   <% else %>
     <%=link_to article_favorites_path(article), {method: "post", remote: true, class: "likes-count"} do %>
      <i class="far fa-heart"></i>
      <%= article.favorites.count %>
     <% end %>
   <% end %>
<% else %>
   <i class="far fa-heart"></i><%= article.favorites.count %>
<% end %>